<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.valhalla.amulet.entity.ColorEntity" table="COLOR" schema="" catalog="athapong_amulet">
        <id name="colorCode">
            <column name="COLOR_CODE" sql-type="int" not-null="true"/>
        </id>
        <property name="colorDesc">
            <column name="COLOR_DESC" sql-type="varchar" length="25" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>